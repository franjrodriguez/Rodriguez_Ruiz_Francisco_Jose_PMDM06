<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo para Textos -->
    <style name="CrashTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/zoinks</item>
        <item name="android:textColor">@color/crash_text_secondary</item>
    </style>

    <!-- Estilo para Botones -->

    <style name="CrashDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@drawable/bg_dialog_wood</item>
        <item name="android:textColorPrimary">@color/crash_text_primary</item>
        <item name="editTextColor">@android:color/white</item>
        <item name="textAppearanceBody1">@style/CrashTextAppearance</item>
        <item name="textAppearanceButton">@style/CrashButtonText</item>
    </style>

    <style name="CrashButtonText" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/zoinks</item>
        <item name="android:textColor">@color/crash_text_primary</item>
    </style>

    <style name="CrashButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:backgroundTint">@color/crash_primary</item>
        <item name="android:textColor">@color/crash_text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/zoinks</item>
    </style>

    <style name="CrashEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/crash_text_primary</item>
        <item name="android:fontFamily">@font/zoinks</item>
    </style>

</resources>
